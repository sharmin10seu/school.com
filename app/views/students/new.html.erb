
<%= form_for @student, :html => { :class => 'form-horizontal', :role =>"form", :multipart => true } do |f| %>
    <%#= render :partial => "shared/errors", :locals => {:item => @product} %>
    <div class="form-group" style="margin-top: 10px">
      <%= f.label :name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control", :placeholder => "Title" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :age, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.number_field :age, :class => "form-control", :placeholder => "Age", :style => "height:100px" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => "btn btn-default" %>
      </div>
    </div>
<% end %>